<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@color/black"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:backgroundTint="#000000"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/back"
        android:tint="@color/white"
        tools:ignore="UseAppTint" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/plusjakartasans_extrabold"
        android:text="Create a new announcement"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Name"
        android:textColor="@color/white"
        android:fontFamily="@font/plusjakartasans_extrabold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded"
        android:backgroundTint="#50444444"
        android:ems="10"
        android:fontFamily="@font/plusjakartasans_medium"
        android:hint="Meeting title"
        android:includeFontPadding="false"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="#90FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/plusjakartasans_extrabold"
        android:text="Start time"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <EditText
            android:id="@+id/start_time_hours"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:backgroundTint="#50444444"
            android:ems="10"
            android:fontFamily="@font/plusjakartasans_medium"
            android:includeFontPadding="false"
            android:inputType="number"
            android:padding="15dp"
            android:textAlignment="center"
            android:textColorHint="#90FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/plusjakartasans_medium"
            android:includeFontPadding="false"
            android:text=":"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/start_time_hours"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/start_time_minutes"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded"
            android:backgroundTint="#50444444"
            android:ems="10"
            android:fontFamily="@font/plusjakartasans_medium"
            android:includeFontPadding="false"
            android:inputType="number"
            android:padding="15dp"
            android:textAlignment="center"
            android:textColorHint="#90FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/plusjakartasans_extrabold"
        android:text="End time"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <EditText
            android:id="@+id/end_time_hours"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:backgroundTint="#50444444"
            android:ems="10"
            android:fontFamily="@font/plusjakartasans_medium"
            android:includeFontPadding="false"
            android:inputType="number"
            android:padding="15dp"
            android:textAlignment="center"
            android:textColorHint="#90FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/plusjakartasans_medium"
            android:includeFontPadding="false"
            android:text=":"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/end_time_hours"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/end_time_minutes"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded"
            android:backgroundTint="#50444444"
            android:ems="10"
            android:fontFamily="@font/plusjakartasans_medium"
            android:includeFontPadding="false"
            android:inputType="number"
            android:padding="15dp"
            android:textAlignment="center"
            android:textColorHint="#90FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:includeFontPadding="false"
        android:fontFamily="@font/plusjakartasans_medium"
        android:layout_height="wrap_content"
        android:text="Create meeting"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

    <Button
        android:id="@+id/destroy_self"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:backgroundTint="#00000000"
        android:fontFamily="@font/plusjakartasans_medium"
        android:text="Cancel"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>